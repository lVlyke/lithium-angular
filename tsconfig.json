{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "atom": {
        "rewriteTsConfig": false
    },
    "angularCompilerOptions": {
        "genDir": "dist",
        "skipMetadataEmit": false
    }
}